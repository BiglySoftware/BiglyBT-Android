<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="0dp"
	android:layout_weight="1"
	android:orientation="vertical"
	tools:context=".activity.TorrentOpenOptionsActivity"
	tools:showIn="@layout/activity_torrent_openoptions_tv">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="48dp"
			android:layout_height="match_parent"
			android:background="@drawable/tv_header_openoptions_start">
		</LinearLayout>

		<com.astuetz.PagerSlidingTabStrip
			android:id="@+id/pager_title_strip"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_gravity="top"
			android:layout_weight="1"
			android:background="?pager_bg"
			app:pstsDividerPadding="5dp"
			app:pstsIndicatorHeight="4dp"/>

		<LinearLayout
			android:layout_width="48dp"
			android:layout_height="match_parent"
			android:background="@drawable/tv_header_openoptions_end">
		</LinearLayout>
	</LinearLayout>

	<androidx.viewpager.widget.ViewPager
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		tools:ignore="InconsistentLayout">
	</androidx.viewpager.widget.ViewPager>
</LinearLayout>
