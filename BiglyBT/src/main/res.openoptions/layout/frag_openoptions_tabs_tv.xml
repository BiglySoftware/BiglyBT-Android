<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	tools:context=".activity.TorrentOpenOptionsActivity"
	tools:showIn="@layout/activity_torrent_openoptions_tv">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:baselineAligned="false"
		>

		<LinearLayout
			android:layout_width="48dp"
			android:layout_height="match_parent"
			android:background="@drawable/tv_header_openoptions_start">
		</LinearLayout>

		<com.google.android.material.tabs.TabLayout
			android:id="@+id/tab_layout"
			style="@style/Widget.MaterialComponents.TabLayout.Colored"
			app:tabGravity="fill"
			app:tabMaxWidth="0dp"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:layout_weight="1"
			/>

		<LinearLayout
			android:layout_width="48dp"
			android:layout_height="match_parent"
			android:background="@drawable/tv_header_openoptions_end">
		</LinearLayout>
	</LinearLayout>


	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/view_pager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		/>
</LinearLayout>
