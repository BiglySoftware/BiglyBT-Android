<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/sidelist_content_selector"
	android:focusable="true"
	android:gravity="fill"
	android:orientation="horizontal"
	android:paddingBottom="1dp"
	android:paddingEnd="16dp"
	android:paddingLeft="@dimen/sidelist_body_textpadding_x"
	android:paddingRight="16dp"
	android:paddingStart="@dimen/sidelist_body_textpadding_x"
	android:paddingTop="1dp">


	<TextView
		android:id="@+id/sidefilter_row_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/letter_bubble"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="1"
		android:minHeight="32dp"
		android:minWidth="48sp"
		android:paddingBottom="2dp"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@color/login_text_color"
		tools:text="A"
		android:paddingStart="8dp"
		android:paddingEnd="8dp"/>

	<TextView
		android:id="@+id/sidefilter_row_count"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_weight="1"
		android:ellipsize="none"
		android:enabled="false"
		android:textAlignment="viewEnd"
		android:gravity="end"
		android:minWidth="30sp"
		android:paddingBottom="3dp"
		android:paddingLeft="5dp"
		android:paddingStart="5dp"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@color/list_sidebar_content_fg"
		tools:text="1289"/>

</LinearLayout>