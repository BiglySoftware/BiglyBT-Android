<com.biglybt.android.widget.CheckableFrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/sidelist_content_selector"
	android:focusable="true"
	android:gravity="center_vertical"
	android:minHeight="48dp"
	android:orientation="vertical"
	android:paddingStart="@dimen/sidelist_body_padding_x"
	android:paddingEnd="5dp"
	android:paddingLeft="@dimen/sidelist_body_padding_x"
	android:paddingRight="5dp"
	>

	<ImageView
		android:id="@+id/sidesort_row_image"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_gravity="end"
		android:layout_marginBottom="2dp"
		android:layout_marginTop="2dp"
		android:alpha="0.6"
		android:scaleType="fitCenter"
		android:tint="#aaffaa"
		tools:ignore="ContentDescription"
		tools:src="@drawable/ic_arrow_upward_white_24dp"/>

	<TextView
		android:id="@+id/sidesort_row_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:layout_marginEnd="4dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="4dp"
		android:layout_marginStart="8dp"
		android:ellipsize="end"
		android:gravity="center_vertical|start"
		android:textAlignment="viewStart"
		android:maxLines="2"
		android:shadowColor="?colorPrimaryDark"
		android:shadowRadius="2"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@drawable/list_sidebar_content_fg_selector"
		android:textSize="12sp"
		tools:text="Sort Item"/>

</com.biglybt.android.widget.CheckableFrameLayout>