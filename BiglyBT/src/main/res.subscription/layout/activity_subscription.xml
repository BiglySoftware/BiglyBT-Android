<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/torrentview_header_padding_top"
	tools:context="com.biglybt.android.client.activity.SubscriptionResultsActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?android:colorBackground">

		<include
			android:id="@+id/actionbar"
			layout="@layout/actionbar_optional_merge"/>

		<include
			layout="@layout/sidelist_subscription"
			android:layout_width="@dimen/sidelist_search_width"
			android:layout_height="match_parent"
			android:layout_below="@+id/actionbar_layout"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/actionbar_layout"
			android:layout_toEndOf="@id/sidelist_layout"
			android:layout_toRightOf="@id/sidelist_layout">

			<include layout="@layout/incl_horizontal_progress"/>

			<com.biglybt.android.widget.SwipeRefreshLayoutExtra
				android:id="@+id/swipe_container"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<com.biglybt.android.adapter.FlexibleRecyclerView
					android:id="@+id/ms_list_results"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					tools:listitem="@layout/row_subscription_result_dpad"
					/>
			</com.biglybt.android.widget.SwipeRefreshLayoutExtra>
		</FrameLayout>
	</RelativeLayout>
</LinearLayout>