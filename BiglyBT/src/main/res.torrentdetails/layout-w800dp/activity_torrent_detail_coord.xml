<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical"
	tools:context="com.biglybt.android.client.activity.TorrentDetailsActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<include layout="@layout/actionbar_merge"/>

		<include
			android:id="@+id/sidelist_layout"
			layout="@layout/sidelist_torrent_details"
			android:layout_width="@dimen/sidelist_torrentdetails_width"
			android:layout_height="0dp"
			android:layout_below="@+id/actionbar_layout"
			android:layout_alignParentBottom="true"/>

		<fragment
			android:id="@+id/frag_torrent_details"
			android:name="com.biglybt.android.client.fragment.TorrentDetailsFragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/actionbar_layout"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_toEndOf="@+id/sidelist_layout"
			android:layout_toRightOf="@+id/sidelist_layout"
			tools:layout="@layout/frag_torrent_details_coord"/>
	</RelativeLayout>
</merge>