<?xml version="1.0" encoding="utf-8"?>
<com.biglybt.android.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_selector"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:paddingStart="@dimen/torrentlist_row_paddingLeft"
    android:paddingLeft="@dimen/torrentlist_row_paddingLeft"
    android:paddingEnd="@dimen/torrentlist_row_paddingRight"
    android:paddingRight="@dimen/torrentlist_row_paddingRight"
    >

    <ImageButton
        android:id="@+id/collapseButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/action_collapse"
        android:tint="?attr/colorOnBackground"
        app:srcCompat="@drawable/ic_expand_less_black_24dp"
        />


    <TextView
        android:id="@+id/torrentList_headerText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|start"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Header Header "
        />

    <TextView
        android:id="@+id/torrentList_headerCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|end"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="135 items"
        />

</com.biglybt.android.widget.CheckableLinearLayout>
