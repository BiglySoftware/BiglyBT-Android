<com.biglybt.android.widget.CheckableFrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:focusable="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/list_selector"
		android:baselineAligned="false"
		android:duplicateParentState="true"
		android:orientation="horizontal"
		android:paddingBottom="8dp"
		android:paddingStart="@dimen/torrentlist_row_paddingLeft"
		android:paddingEnd="@dimen/torrentlist_row_paddingRight"
		android:paddingLeft="@dimen/torrentlist_row_paddingLeft"
		android:paddingRight="@dimen/torrentlist_row_paddingRight"
		android:paddingTop="8dp">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/ms_result_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="Name of awesome result"/>

			<ProgressBar
				android:id="@+id/ms_result_rank"
				android:layout_width="fill_parent"
				android:layout_height="2dp"
				android:layout_marginBottom="8dp"
				android:background="#20000000"
				android:indeterminateOnly="false"
				android:max="10000"
				android:progressDrawable="@drawable/lb_playback_progress_bar"
				tools:progress="7000"
				/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/ms_result_size"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textAppearance="?android:attr/textAppearanceMedium"
					tools:text="691 MB"/>

				<TextView
					android:id="@+id/ms_result_tags"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:textAlignment="viewEnd"
					android:gravity="end|center_vertical"
					tools:text="[Tag] [Tag2]"/>
			</LinearLayout>

			<TextView
				android:id="@+id/ms_result_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				tools:drawableLeft="@drawable/guide_icon"
				tools:text="3 weeks ago"
				tools:drawableStart="@drawable/guide_icon"/>

			<TextView
				android:id="@+id/ms_result_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				tools:text="100 Seeds * 20 Peers"/>

		</LinearLayout>
	</LinearLayout>
</com.biglybt.android.widget.CheckableFrameLayout>