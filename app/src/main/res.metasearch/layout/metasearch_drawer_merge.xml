<merge xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout
		android:background="?sidelist_content_bg"
		android:id="@+id/drawer_view"
		android:layout_gravity="start"
		android:orientation="vertical"
		android:layout_width="@dimen/sidelist_search_width"
		android:layout_height="match_parent"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:id="@+id/sidelist_topinfo"
			android:textColor="@drawable/list_sidebar_content_fg_selector"
			tools:text="5 results for FooBar"/>

		<include layout="@layout/sidelist_metasearch"/>
	</LinearLayout>
</merge>