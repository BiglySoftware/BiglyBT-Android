<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/login_choicearea"
	android:layout_width="@dimen/login_row_maxwidth"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:gravity="center"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/login_server"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/login_selector"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_vertical"
		android:minHeight="64dp"
		android:paddingStart="@dimen/activity_horizontal_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingTop="16dp"
		android:paddingEnd="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingBottom="16dp"
		android:stateListAnimator="@animator/fade_in_selector">

		<ImageView
			android:id="@+id/login_server_logo"
			android:layout_width="48dp"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/login_server_header"
			android:layout_alignBottom="@+id/login_server_subtitle"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:alpha="0.8"
			android:paddingEnd="8dp"
			android:paddingRight="8dp"
			app:srcCompat="@drawable/biglybt_white_cutout"
			tools:ignore="ContentDescription"/>

		<TextView
			android:id="@+id/login_server_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toStartOf="@+id/login_server_chevron"
			android:layout_toLeftOf="@+id/login_server_chevron"
			android:layout_toEndOf="@+id/login_server_logo"
			android:layout_toRightOf="@+id/login_server_logo"
			app:fontFamily="sans-serif-smallcaps"
			android:text="@string/login_server_title"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/login_text_color"/>

		<TextView
			android:id="@+id/login_server_subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/login_server_header"
			android:layout_toStartOf="@+id/login_server_chevron"
			android:layout_toLeftOf="@+id/login_server_chevron"
			android:layout_toEndOf="@+id/login_server_logo"
			android:layout_toRightOf="@+id/login_server_logo"
			android:alpha="0.8"
			android:text="@string/login_server_subtitle"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/login_text_color"/>

		<ImageView
			android:id="@+id/login_server_chevron"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/login_server_header"
			android:layout_alignBottom="@id/login_server_subtitle"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:paddingStart="4dp"
			android:paddingLeft="4dp"
			android:rotationY="@integer/angle_rtl_180"
			android:src="@drawable/lb_ic_guidedactions_item_chevron"
			tools:ignore="ContentDescription"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/login_remote"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/login_selector"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_vertical"
		android:minHeight="64dp"
		android:paddingStart="@dimen/activity_horizontal_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingTop="16dp"
		android:paddingEnd="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingBottom="16dp">

		<ImageView
			android:id="@+id/login_remote_logo"
			android:layout_width="48dp"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/login_remote_header"
			android:layout_alignBottom="@+id/login_remote_subtitle"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:alpha="0.8"
			android:paddingEnd="8dp"
			android:paddingRight="8dp"
			app:srcCompat="@drawable/ic_pc_device_white"
			tools:ignore="ContentDescription"/>


		<TextView
			android:id="@+id/login_remote_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toStartOf="@+id/login_remote_chevron"
			android:layout_toLeftOf="@+id/login_remote_chevron"
			android:layout_toEndOf="@id/login_remote_logo"
			android:layout_toRightOf="@id/login_remote_logo"
			app:fontFamily="sans-serif-smallcaps"
			android:text="@string/login_remote_title"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/login_text_color"/>

		<TextView
			android:id="@+id/login_remote_subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/login_remote_header"
			android:layout_toStartOf="@+id/login_remote_chevron"
			android:layout_toLeftOf="@+id/login_remote_chevron"
			android:layout_toEndOf="@id/login_remote_logo"
			android:layout_toRightOf="@id/login_remote_logo"
			android:alpha="0.8"
			android:text="@string/login_remote_subtitle"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/login_text_color"/>

		<ImageView
			android:id="@+id/login_remote_chevron"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/login_remote_header"
			android:layout_alignBottom="@id/login_remote_subtitle"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:paddingStart="4dp"
			android:paddingLeft="4dp"
			android:rotationY="@integer/angle_rtl_180"
			android:src="@drawable/lb_ic_guidedactions_item_chevron"
			tools:ignore="ContentDescription"/>

	</RelativeLayout>
</LinearLayout>