<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/custom_toast_layout_id"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/toast_frame"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		android:shadowColor="#BB000000"
		android:shadowRadius="2.75"
		android:textAlignment="center"
		android:textAppearance="@android:style/TextAppearance.Small"
		android:textColor="@android:color/background_light"
		tools:text="A very long toast could go here. A very long toast could go here. A very long toast could go here. A very long toast could go here. A very long toast could go here. A very long toast could go here. A very long toast could go here. "/>

</LinearLayout>